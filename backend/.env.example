# EchoPersona API Keys Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for natural AI conversations)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API Key (alternative AI provider)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Deepgram API Key (for speech-to-text)
# Get from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ElevenLabs API Key (for text-to-speech)
# Get from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# LiquidMetal AI API Key (alternative STT/AI provider)
# Get from: https://liquidmetal.ai/dashboard
LIQUIDMETAL_API_KEY=your_liquidmetal_api_key_here

# Vultr API Key (for cloud deployment)
# Get from: https://my.vultr.com/settings/#settingsapi
VULTR_API_KEY=your_vultr_api_key_here

# Server Configuration
PORT=3000
WS_PATH=/ws
